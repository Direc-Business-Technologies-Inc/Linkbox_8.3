<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Transactions</h3>
                </div>
                <div class="box-body pad table-responsive">
                    <table class="table table-borderless center">
                        <tr>
                            <td></td>
                            <td></td>
                            <td width="15%">
                                <label>Database Uploading</label>
                            </td>
                            <td width="20%">
                                <input type="checkbox" data-toggle="toggle" data-on="Enabled" data-off="Disabled" id="dbup">
                            </td>
                            <td width="15%">
                                <label>Transaction Email</label>
                            </td>
                            <td>
                                <input type="checkbox" data-toggle="toggle" data-on="Enabled" data-off="Disabled" id="transemail">
                            </td>

                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td width="15%">
                                <label>Template Uploading</label>
                            </td>
                            <td width="20%">
                                <input type="checkbox" data-toggle="toggle" data-on="Enabled" data-off="Disabled" id="tempup">
                            </td>
                            <td width="15%">
                                <label>Error Email</label>
                            </td>
                            <td>
                                <input type="checkbox" data-toggle="toggle" data-on="Enabled" data-off="Disabled" id="erremail">
                            </td>
                        </tr>

                        <tr>
                            <td></td>
                            <td></td>
                            <td width="15%">
                                <label>Data Extraction</label>
                            </td>
                            <td>
                                <input type="checkbox" data-toggle="toggle" data-on="Enabled" data-off="Disabled" checked id="dataex">
                            </td>

                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td width="15%">
                                <label>Deposit</label>
                            </td>
                            <td>
                                <input type="checkbox" data-toggle="toggle" data-on="Enabled" data-off="Disabled" id="dep">
                            </td>

                        </tr>
                    </table>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.col -->
    </div>
</section>


<div class="modal fade" id="dataex-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Modules</h4>
            </div>
            <div class="modal-body">
                <div class="box-body">
                    <table id="AddonConfig" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Source</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Sales Order</td>
                                <td>SAP</td>
                                <td><span class="label label-success">Active</span></td>
                                <td width="5%"><input type="checkbox" class="flat-red" /></td>

                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Inventory Transfer</td>
                                <td>SAP</td>
                                <td><span class="label label-success">Active</span></td>
                                <td width="5%"><input type="checkbox" class="flat-red" /></td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Sales</td>
                                <td>Addon</td>
                                <td><span class="label label-danger">In Active</span></td>
                                <td width="5%"><input type="checkbox" class="flat-red" /></td>

                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


@section Scripts {
    <script>
        $(document)

        $("#dataex").change(function () {
            if (this.checked) {
                $('#dataex-modal').modal('show');
            }
            else {
                $('#dataex-modal').modal('hide');
            }
        });
            //.on('click', '#dataex', function () {
