@model DomainLayer.ViewModels.EmailCreateViewModel
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_1" data-toggle="tab">Email Logs</a></li>
                    <li><a href="#tab_2" data-toggle="tab">Email Template</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="box">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="email" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Edit</th>
                                            <th>Code</th>
                                            <th>Email Address</th>
                                            <th>Subject</th>
                                            <th>Host</th>
                                            <th>Port</th>
                                            <th>Ssl</th>
                                            <th>To</th>
                                            <th>Type</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var email in Model.EmailView)
                                        {
                                            <tr>
                                                <td width="5%"><button type="button" class="btn-info btn-flat fa fa-edit" data-toggle="modal" data-target="#edit-modal" data-email-id="@email.EmailId"></button></td>
                                                <td>@email.EmailCode</td>
                                                <td>@email.EmailFrom</td>
                                                <td>@email.EmailSubject</td>
                                                <td>@email.EmailHost</td>
                                                <td>@email.EmailPort</td>
                                                <td>@email.EmailSsl</td>
                                                <td>@email.EmailTo</td>
                                                <td>@email.EmailLog</td>
                                                @if (email.IsActive == true)
                                                {
                                                    <td><span class="label label-success">Active</span></td>
                                                }
                                                else
                                                {
                                                    <td><span class="label label-danger">In Active</span></td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href='@Url.Action("CreateEmail", "Features")' class="btn btn-primary btn-custom2" style="float:right">New Email Logs</a>
                            </div>

                            <!-- /.box-body -->
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_2">

                        <div class="box">
                            <div class="box-header">

                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="email-template" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Edit</th>
                                            <th>Code</th>
                                            <th>Description</th>
                                            <th>Subject</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var email in Model.EmailTemplateView)
                                        {
                                            <tr>
                                                <td width="5%">
                                                <button type="button" onclick="location.href='@Url.Action("UpdateEmailTemplate","Features", new { Id= email.Id})'" class="btn-info btn-flat fa fa-edit" data-toggle="modal" data-target="#edit-template-modal" data-email-template-id="@email.Id"></button>
                                                @*<a href='@Url.Action("UpdateEmailTemplate","Features", new { Id= email.Id})' class="btn-info btn-flat fa fa-edit"></a>*@
                                                </td>
                                                <td>@email.Code</td>
                                                <td>@email.Description</td>
                                                <td>@email.Subject</td>
                                                @if (email.IsActive == true)
                                                {
                                                    <td><span class="label label-success">Active</span></td>
                                                }
                                                else
                                                {
                                                    <td><span class="label label-danger">In Active</span></td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href='@Url.Action("CreateEmailTemplate", "Features")' class="btn btn-primary btn-custom2" style="float:right">New Email Template</a>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>

                    <div class="tab-pane" id="tab_3">
                        <div class="box">
                            <div class="box-header">
                                @*<h3 class="box-title">Upload Schedule Setup</h3>*@
                            </div>
                            <!-- /.box-header -->
                            <!-- /.box-body -->
                        </div>

                    </div>
                </div>
                <!-- /.tab-pane -->
            </div>


        </div>
    </div>
</section>

<div class="modal fade" id="edit-modal">
    <div class="modal-dialog">
        <form id="editemail-submit">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Edit Email Setup</h4>
                </div>
                <div class="modal-body">
                    <div class="box-body">

                        <div class="form-group">
                            <label>Email Code:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-file-code-o"></i>
                                </div>
                                <input type="text" class="
                                       " placeholder="Email Code" id="edit-email-code" readonly>
                            </div>
                        </div>
                        <div class="form-group" id="edit-email-from-formgroup">
                            <label>*From:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </div>
                                <input type="email" class="form-control" placeholder="Email Address" id="edit-email-from" required>
                            </div>
                        </div>
                        <div class="form-group" id="edit-email-pass-formgroup">
                            <label>*Password:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-key"></i>
                                </div>
                                <input type="password" class="form-control" placeholder="Password" id="edit-email-pass" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Subject:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-header"></i>
                                </div>
                                <input type="text" class="form-control" placeholder="Subject" id="edit-email-subj">
                            </div>
                        </div>

                        <div class="form-group" id="edit-email-host-formgroup">
                            <label>*Outgoing Host:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-ioxhost"></i>
                                </div>
                                <input type="text" class="form-control" placeholder="Host" id="edit-email-host" required>
                            </div>
                        </div>

                        <div class="form-group" id="edit-email-port-formgroup">
                            <label>*Outgoing Port:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-wrench"></i>
                                </div>
                                <input type="number" class="form-control" placeholder="Port" id="edit-email-port" required>
                            </div>
                        </div>

                        <div class="form-group" id="edit-email-ssl-formgroup">
                            <label>*Enable Ssl:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-expeditedssl"></i>
                                </div>
                                <select class="form-control select2" style="width: 100%;" id="edit-email-ssl" required>
                                    <option>Enable</option>
                                    <option>Disable</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group" id="edit-email-to-formgroup">
                            <label>*To:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-lock"></i>
                                </div>
                                <input type="email" class="form-control" placeholder="Email" id="edit-email-to" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Cc:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-cc"></i>
                                </div>

                                @*<input type="email" class="form-control" placeholder="Cc" id="edit-email-cc">*@
                                <select class="form-control select2 token" style="width: 100%;" id="edit-email-cc" name="Cc"></select>
                            </div>
                        </div>

                        <div class="form-group" id="edit-email-log-formgroup">
                            <label>*Type:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-list-ol"></i>
                                </div>
                                <select class="form-control select2" style="width: 100%;" id="edit-email-log" required>
                                    <option>Log</option>
                                    <option>Transaction</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group" id="edit-email-addoncode-formgroup">
                            <label>*Addon Code:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-database"></i>
                                </div>
                                <select class="form-control select2" style="width: 100%;" id="edit-email-addoncode" required>
                                    @foreach (var code in Model.Addon)
                                    {
                                        <option>@code.AddonCode</option>
                                    }

                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label></label>
                            <div class="input-group">
                                <input type="checkbox" class="flat-red" id="edit-email-stat" /> Is Active?
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-custom" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-custom" id="btn-email-update">Save Changes</button>
                </div>
            </div>
        </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@section Scripts {
    <script>
        $("#edit-email-from").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#edit-email-from-formgroup').hasClass('error'))) {
                $('#edit-email-from-formgroup').append('<span class="help-block text-red">Email From is Required</span>');
            }
            $('#edit-email-from-formgroup').addClass('error');
        });
        $("#edit-email-pass").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#edit-email-pass-formgroup').hasClass('error'))) {
                $('#edit-email-pass-formgroup').append('<span class="help-block text-red">Password is Required</span>');
            }
            $('#edit-email-pass-formgroup').addClass('error');
        });
        $("#edit-email-host").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#edit-email-host-formgroup').hasClass('error'))) {
                $('#edit-email-host-formgroup').append('<span class="help-block text-red">Outgoing Host is Required</span>');
            }
            $('#edit-email-host-formgroup').addClass('error');
        });
        $("#edit-email-port").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#edit-email-port-formgroup').hasClass('error'))) {
                $('#edit-email-port-formgroup').append('<span class="help-block text-red">Outgoing Port is Required</span>');
            }
            $('#edit-email-port-formgroup').addClass('error');
        });
        $("#edit-email-ssl").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#edit-email-ssl-formgroup').hasClass('error'))) {
                $('#edit-email-ssl-formgroup').append('<span class="help-block text-red">Email SSL is Required</span>');
            }
            $('#edit-email-ssl-formgroup').addClass('error');
        });
        $("#edit-email-to").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#edit-email-to-formgroup').hasClass('error'))) {
                $('#edit-email-to-formgroup').append('<span class="help-block text-red">Email To is Required</span>');
            }
            $('#edit-email-to-formgroup').addClass('error');
        });

        $("#edit-email-log").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#edit-email-log-formgroup').hasClass('error'))) {
                $('#edit-email-log-formgroup').append('<span class="help-block text-red">Email Type is Required</span>');
            }
            $('#edit-email-log-formgroup').addClass('error');
        });

        $('.modal').on('hidden.bs.modal', function (e) {
            //addon-submit
            $('.form-group').removeClass('error');
            $('.help-block').remove();
        });
    </script>
    <script>
        $(function () {
            $('[data-mask]').inputmask()

            $('#email').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })

        $(function () {
            $('[data-mask]').inputmask()

            $('#email-template').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })


    </script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.select2').select2();
            $(".token").select2({
                tags: true,
                tokenSeparators: ['/', ',', ';', " "]
            });
        });
    </script>

    <script>
        var ids = 0;
        $(document)
            .on('click', 'button[data-email-id]', function () {
                var id = $(this).data('email-id');
                ids = id;
                $('#btn-email-update').attr('data-emailid', id);
                $.post('FindEmail', { Id: id }).done(result => {
                    var i = 0;
                    var cc = [];
                    for (var x in result.EmailView) {
                        var arr = result.EmailView[x].EmailCc.split(',');
                        $.each(arr, function (i) {
                            $('#edit-email-cc').append(new Option(arr[i], arr[i], true, true)).trigger('change');
                            cc.push(arr[i]);
                        });
                        console.log(cc);

                        $('#edit-email-code').val(result.EmailView[x].EmailCode);
                        $('#edit-email-from').val(result.EmailView[x].EmailFrom);
                        $('#edit-email-pass').val(result.EmailView[x].EmailPassword);
                        $('#edit-email-subj').val(result.EmailView[x].EmailSubject);
                        $('#edit-email-host').val(result.EmailView[x].EmailHost);
                        $('#edit-email-port').val(result.EmailView[x].EmailPort);
                        $('#edit-email-ssl').val(result.EmailView[x].EmailSsl);
                        $('#edit-email-ssl').trigger('change');
                        $('#edit-email-to').val(result.EmailView[x].EmailTo);
                        $('#edit-email-cc').val(cc);
                        $('#edit-email-cc').trigger('change');
                        $('#edit-email-log').val(result.EmailView[x].EmailLog);
                        $('#edit-email-log').trigger('change');
                        $('#edit-email-addoncode').val(result.Addon[x].AddonCode);
                        $('#edit-email-addoncode').trigger('change');
                        if (result.EmailView[x].IsActive == true) {
                            $('input:checkbox[id = edit-email-stat]').iCheck('check');
                            $('input:checkbox[id = edit-email-stat]').val('checked');
                        }
                        else {
                            $('input:checkbox[id = edit-email-stat]').iCheck('uncheck');
                            $('input:checkbox[id = edit-email-stat]').val('unchecked');
                        }

                        $('input:checkbox[id = edit-email-stat]').on('ifChecked', function (event) {
                            $('input:checkbox[id = edit-email-stat]').val('checked');
                        });

                        $('input:checkbox[id = edit-email-stat]').on('ifUnchecked', function (event) {
                            $('input:checkbox[id = edit-email-stat]').val('unchecked');
                        });
                    }
                })
            })

            .on('submit', '#editemail-submit', function (e) {
                e.preventDefault();
                var id = ids;
                var EmailCode = $('#edit-email-code').val();
                var EmailFrom = $('#edit-email-from').val();
                var EmailPass = $('#edit-email-pass').val();
                var EmailSubj = $('#edit-email-subj').val();
                var EmailHost = $('#edit-email-host').val();
                var EmailPort = $('#edit-email-port').val();
                var EmailSsl = $('#edit-email-ssl').val();
                var EmailTo = $('#edit-email-to').val();
                var EmailCc = $('#edit-email-cc').val();
                var EmailLog = $('#edit-email-log').val();
                var Addon = $('#edit-email-addoncode').val();
                console.log(EmailCc);
                var IsActive;
                var ChkboxVal = $('input:checkbox[id = edit-email-stat]').val();
                if (ChkboxVal == 'checked') { IsActive = true; }
                else { IsActive = false; }

                swal({
                    title: 'Are you sure you want to update Email Setup?',
                    text: "",
                    type: 'info',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.value) {

                        $.getJSON('UpdateEmail', {
                            EmailId: id,
                            EmailCode: EmailCode,
                            EmailFrom: EmailFrom,
                            EmailPassword: EmailPass,
                            EmailSubject: EmailSubj,
                            EmailHost: EmailHost,
                            EmailPort: EmailPort,
                            EmailSsl: EmailSsl,
                            EmailTo: EmailTo,
                            EmailLog: EmailLog,
                            IsActive: IsActive,
                            Addon: Addon,
                            EmailCc: EmailCc,
                        }).done(function (data) {
                            if (data) {
                                swal('Success!', '', 'success')
                                //$("#email").load("Email #email");
                                $('.modal').modal('hide');
                                $('.modal').on('hidden.bs.modal', function () {
                                    $(this).find("input,textarea,select").val('').end();

                                });

                                setTimeout(function () { window.location.href = ""; }, 1500);
                            }
                        }).fail(function () {
                            swal('Something went wrong.', 'Please contact the administrator.', 'warning')
                        });
                    }
                })
            })
    </script>

}
