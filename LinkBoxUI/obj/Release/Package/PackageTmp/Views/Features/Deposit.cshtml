@model DomainLayer.ViewModels.DepositCreateViewModel
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Deposit Setup</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="deposit" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Edit</th>
                                <th>Breakdown Code</th>
                                <th>Breakdown Type</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var deposit in Model.DepositView)
                            {
                                <tr>
                                    <td width="5%"><button type="button" class="btn-info btn-flat fa fa-edit" data-toggle="modal" data-target="#edit-modal" data-deposit-id="@deposit.BrkId"></button></td>
                                    <td>@deposit.BrkCode</td>
                                    <td>@deposit.BrkDescription</td>
                                    @if (deposit.IsActive == true)
                                    {
                                        <td><span class="label label-success">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-danger">In Active</span></td>}

                                </tr>
                            }
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-primary btn-custom2" style="float: right;" data-toggle="modal" data-target="#create-modal">New</button>
                </div>

                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="create-modal">
    <div class="modal-dialog">
        <form id="deposit-submit">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">New Deposit Setup</h4>
                </div>
                <div class="modal-body">
                    <div class="box-body">
                        <div class="form-group" id="deposit-code-formgroup">
                            <label>*Breakdown Code:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-sticky-note"></i>
                                </div>
                                <input type="text" class="form-control deposit" placeholder="Breakdown Code" id="deposit-code" required>
                            </div>
                        </div>
                        <div class="form-group" id="deposit-name-formgroup">
                            <label>*Breakdown Type:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-list-alt"></i>
                                </div>
                                <input type="text" class="form-control" placeholder="Breakdown Type" id="deposit-name" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-custom" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-custom" id="btn-deposit-save">Save</button>
                </div>
            </div>
        </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="edit-modal">
    <div class="modal-dialog">
        <form id="editdeposit-submit">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Edit SAP Setup</h4>
                </div>
                <div class="modal-body">
                    <div class="box-body">
                        <div class="form-group">
                            <label>*Breakdown Code:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-sticky-note"></i>
                                </div>
                                <input type="text" class="form-control" placeholder="Breakdown Code" id="edit-deposit-code" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>*Breakdown Type:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-list-alt"></i>
                                </div>
                                <input type="text" class="form-control" placeholder="Breakdown Type" id="edit-deposit-name" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label></label>
                            <div class="input-group">
                                <input type="checkbox" class="flat-red" id="edit-deposit-stat" /> Is Active?
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-custom" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-custom" id="btn-deposit-update">Save Changes</button>
                </div>
            </div>
        </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@section Scripts {
    <script>
        $(function () {
            $('[data-mask]').inputmask()

            $('#deposit').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
        $("#deposit-code").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#deposit-code-formgroup').hasClass('error'))) {
                $('#deposit-code-formgroup').append('<span class="help-block text-red">Breakdown Code is Required</span>');
            }
            $('#deposit-code-formgroup').addClass('error');
        });
        $("#deposit-name").on("invalid", function (e) {
            e.preventDefault();
            if (!($('#deposit-name-formgroup').hasClass('error'))) {
                $('#deposit-name-formgroup').append('<span class="help-block text-red">Breakdown Type is Required</span>');
            }
            $('#deposit-name-formgroup').addClass('error');
        });

        $('.modal').on('hidden.bs.modal', function (e) {
            //addon-submit
            $("#deposit-submit").trigger('reset');
            $('.form-group').removeClass('error');
            $('.help-block').remove();
        });
    </script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>

    <script>
        var validate = "", ids = 0;
        $(document)
            .on('submit', '#deposit-submit', function (e) {
                e.preventDefault();
                var DepositCode = $("#deposit-code").val();
                var DepositName = $("#deposit-name").val();
                validate = "";
                swal({
                    title: 'Are you sure you want to Save Deposit Setup?',
                    text: "",
                    type: 'info',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.value) {

                        $.post('CreateDeposit', {
                            BrkCode: DepositCode,
                            BrkDescription: DepositName,

                        }).done(function (data) {
                            if (data) {
                                swal('Success!', '', 'success')
                                $("#deposit").load("Deposit #deposit");
                                $('.modal').modal('hide');
                                $('.modal').on('hidden.bs.modal', function () {
                                    $(this).find("input,textarea,select").val('').end();

                                });
                            }

                        }).fail(function () {
                            swal('Something went wrong.', 'Please contact the administrator.', 'warning')
                        });
                    }
                })
            })

            .on('click', 'button[data-deposit-id]', function () {
                var id = $(this).data('deposit-id');
                ids = id;
                $.post('FindDeposit', { Id: id }).done(result => {
                    var i = 0;
                    for (var x in result.DepositView) {
                        $('#edit-deposit-code').val(result.DepositView[x].BrkCode);
                        $('#edit-deposit-name').val(result.DepositView[x].BrkDescription);

                        if (result.DepositView[x].IsActive == true) {
                            $('input:checkbox[id = edit-deposit-stat]').iCheck('check');
                            $('input:checkbox[id = edit-deposit-stat]').val('checked');
                        }
                        else {
                            $('input:checkbox[id = edit-deposit-stat]').iCheck('uncheck');
                            $('input:checkbox[id = edit-deposit-stat]').val('unchecked');
                        }

                        $('input:checkbox[id = edit-deposit-stat]').on('ifChecked', function (event) {
                            $('input:checkbox[id = edit-deposit-stat]').val('checked');
                        });

                        $('input:checkbox[id = edit-deposit-stat]').on('ifUnchecked', function (event) {
                            $('input:checkbox[id = edit-deposit-stat]').val('unchecked');
                        });
                    }
                })
            })

            .on('submit', '#editdeposit-submit', function (e) {
                e.preventDefault();
                var id = ids;
                var DepositCode = $("#edit-deposit-code").val();
                var DepositName = $("#edit-deposit-name").val();
                var IsActive;
                var ChkboxVal = $('input:checkbox[id = edit-deposit-stat]').val();
                if (ChkboxVal == 'checked')
                { IsActive = true; }
                else { IsActive = false; }
                swal({
                    title: 'Are you sure you want to Save Deposit Setup?',
                    text: "",
                    type: 'info',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.value) {

                        $.getJSON('UpdateDeposit', {
                            BrkId: id,
                            BrkCode: DepositCode,
                            BrkDescription: DepositName,
                            IsActive: IsActive,
                        }).done(function (data) {
                            if (data) {
                                swal('Success!', '', 'success')
                                $("#deposit").load("Deposit #deposit");
                                $('.modal').modal('hide');
                                $('.modal').on('hidden.bs.modal', function () {
                                    $(this).find("input,textarea,select").val('').end();

                                });
                            }
                        }).fail(function () {
                            swal('Something went wrong.', 'Please contact the administrator.', 'warning')
                        });
                    }
                })

            })
        

        $(".deposit").focusout(function () {
            var Code = $(this).val();
            $.post('ValidateCode', { Code: Code }).done(result => {
                for (var x in result.DepositView) {

                    if (result.DepositView[x].BrkCode != "") {
                        swal('Breakdown Code is already taken.', '', 'warning')
                        $(this).val("");
                        $(this).focus();
                    }

                }
            })
        });
        $('.modal').on('hide.bs.modal', function () {
            $(this).find("input,textarea,select").val('').end();

        });
    </script>
}
